  <!-- <node pkg="tf" type="static_transform_publisher" name="camera2odom" args="0 0 0 0 0 0 /camera /odom 1000"/> -->
  <node pkg="tf" type="static_transform_publisher" name="camera2odom" args="0 0 0 0 0 0 /camera /map 1000"/>
  <node pkg="tf" type="static_transform_publisher" name="vehicle2base_link" args="0 0 0  0 0 0 /vehicle /base_link 1000"/>
